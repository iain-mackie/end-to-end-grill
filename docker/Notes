apiVersion: v1
kind: Pod
metadata:
  name: genre-entity-linking-gpu-fold-0
  namespace: imackieproject
spec:
  volumes:
  - name: nfs-access
    persistentVolumeClaim:
      claimName: imackievol1claim
  containers:
  - env:
    - name: INPUT
      value: /nfs/trec_robust04/parade_runs/full_robust_linking_input_v2/fold_0/
    - name: OUTPUT
      value: /nfs/trec_robust04/parade_runs/full_robust_linking_output_v2/fold_0/
    - name: MODEL
      value: /nfs/trec_robust04/end-to-end-grill/genre_grill/data/fairseq_e2e_entity_linking_aidayago
    - name: GPU
      value: gpu
    name: genre-entity-linking-container
    image: iainmackie/end-to-end-grill-gpu-job:v7
    imagePullPolicy: IfNotPresent
    resources:
      requests:
        cpu: "4000m"
        memory: "32Gi"
        nvidia.com/gpu: 1
      limits:
        cpu: "16000m"
        memory: "128Gi"
        nvidia.com/gpu: 1
    volumeMounts:
    - mountPath: /nfs/
      name: nfs-access
  serviceAccount: containerroot
  restartPolicy: Never


